# Kafka Configuration Template for Confluent Cloud
# Copy this to .env and update with your actual values

# Confluent Cloud Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=your-cluster.region.aws.confluent.cloud:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISMS=PLAIN
KAFKA_SASL_USERNAME=your-api-key
KAFKA_SASL_PASSWORD=your-api-secret
KAFKA_SESSION_TIMEOUT_MS=30000
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_GROUP_ID=ubereats-agents

# Topic Names (updated based on your actual data)
GPS_TOPIC=gps_data
GPS_CLOUD_TOPIC=kafka-gps-data  
ORDERS_TOPIC=orders-events  
DRIVERS_TOPIC=drivers-events
RESTAURANTS_TOPIC=restaurants-events
TRAFFIC_TOPIC=traffic-events

# Output Topics
ETA_PREDICTIONS_TOPIC=eta-predictions
DRIVER_ALLOCATIONS_TOPIC=driver-allocations
ROUTE_OPTIMIZATIONS_TOPIC=route-optimizations
DELIVERY_PLANS_TOPIC=delivery-plans
SYSTEM_ALERTS_TOPIC=system-alerts
AGENT_METRICS_TOPIC=agent-metrics

# Processing Configuration
MAX_BATCH_SIZE=100
CONSUMER_TIMEOUT_MS=1000
PRODUCER_LINGER_MS=100
PRODUCER_BATCH_SIZE=16384

# For local development/testing (comment out Confluent Cloud settings above)
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_SECURITY_PROTOCOL=PLAINTEXT