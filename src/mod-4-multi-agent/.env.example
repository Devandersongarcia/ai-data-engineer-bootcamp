# =============================================================================
# CrewAI Abandoned Order Detection System - Environment Configuration
# =============================================================================
# This template contains all environment variables required for the
# abandoned order detection system. Copy to .env and update values.
#
# Required configurations:
# - Database connection for order data
# - OpenAI API for agent intelligence
# - Langfuse for observability and monitoring
# - Application-specific thresholds and settings
# =============================================================================

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://your_user:your_password@your_host:5432/uber_eats_monitoring
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# AI Service Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-4o-mini

# Observability Configuration
# Obtain keys from: https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_HOST=https://cloud.langfuse.com

# Monitoring Thresholds (minutes)
MONITORING_INTERVAL_MINUTES=5
STUCK_DRIVER_THRESHOLD_MINUTES=20
OVERDUE_ORDER_THRESHOLD_MINUTES=45
PROBLEMATIC_ORDER_AGE_MINUTES=30

# System Configuration
LOG_LEVEL=INFO
LOG_FILE=abandoned_orders.log
ENVIRONMENT=development

# CrewAI Agent Configuration
CREW_VERBOSE=true
CREW_MAX_RPM=10
CREW_MEMORY_ENABLED=true
CREW_PLANNING_ENABLED=true